<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="36dp"
    android:layout_marginTop="@dimen/spacing_smaller"
    android:layout_marginBottom="@dimen/spacing_smaller"
    android:layout_marginStart="@dimen/spacing_normal"
    android:background="@drawable/bg_rectangle_rounded_blue_border_lightbluegrey70_30"
    android:paddingStart="@dimen/spacing_normal"
    android:paddingEnd="@dimen/spacing_normal">


    <TextView
        android:id="@+id/tv_tag_selected"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginBottom="@dimen/spacing_smaller"
        tools:text="Obgyn" />

    <ImageView
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_alignBottom="@+id/tv_tag_selected"
        android:layout_marginStart="@dimen/spacing_small"
        android:layout_toEndOf="@+id/tv_tag_selected"
        android:rotation="45"
        android:src="@drawable/ic_add_black_24dp"
        android:tint="@color/colorAccent" />
</RelativeLayout>