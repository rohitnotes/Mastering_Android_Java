<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/header_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:text="Name : " />

    <TextView
        android:id="@+id/tv_name_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_toEndOf="@+id/header_name"
        android:text="valueNama" />

    <TextView
        android:id="@+id/header_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/header_name"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:text="headerAddress" />

    <EditText
        android:id="@+id/et_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_name_value"
        android:layout_toRightOf="@+id/header_address"
        android:text="valueAddress" />

    <Button
        android:id="@+id/btn_save_fragment_one"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/header_address"
        android:layout_marginBottom="32dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="8dp" />

</android.support.constraint.ConstraintLayout>